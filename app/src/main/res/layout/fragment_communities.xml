<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMUNITIES"
            android:fontFamily="@font/convergences"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/student_union_recruits_new" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/sportsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/convergences"
                            android:textSize="20dp"
                            android:text="Sports World"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/convergences"
                            android:textSize="16dp"
                            android:text="A community of All Sports lovers."
                            android:textColor="@color/black"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/join_button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"
                            android:text="Join"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pubg_get_back" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/gamersTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PUBG Gamers"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/convergences"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For all PUBG Gamers."
                            android:fontFamily="@font/convergences"
                            android:textSize="16dp"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/join_button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pro_trust" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/programmersTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Programmers' Republic"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/convergences"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A community of all Programmers, Coders."
                            android:fontFamily="@font/convergences"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/join_button4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/music_festival" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/musicTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Music Union"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/convergences"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For Everyone interested in the art music."
                            android:fontFamily="@font/convergences"
                            android:textSize="16dp"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/join_button5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dance_culture" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/danceTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dance Enthusiasts"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/convergences"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A community of dance lovers."
                            android:fontFamily="@font/convergences"
                            android:textSize="16dp"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/join_button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>